                "alignment": "center",
                "buttons": [
                    {
                        "type": "Secondary",
                        "text": "View vouchers",
                        "on_click": {
                            "type": "DeepLink",
                            "args": {
                                "link": "talabat://?s=vouchers",
                                "tracking_event_name": "view_vouchers_clicked"
                            }
                        }
                    },
                    {
                        "type": "Primary",
                        "text": "Track order",
                        "on_click": {
                            "type": "Dismiss",
                            "args": {}
                        }
                    }
                ]
            }
        }
    }
}