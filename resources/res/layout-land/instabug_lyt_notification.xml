<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_gravity="bottom" android:orientation="vertical" android:id="@+id/instabug_in_app_notification" android:layout_width="match_parent" android:layout_height="wrap_content">
    <View android:background="@drawable/ibg_chat_shadow_top" android:layout_width="match_parent" android:layout_height="18dp"/>
    <RelativeLayout android:id="@+id/instabug_notification_layout" android:background="@android:color/white" android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.instabug.library.ui.custom.CircularImageView android:id="@+id/senderAvatarImageView" android:layout_width="50dp" android:layout_height="50dp" android:layout_marginRight="12dp" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:layout_marginEnd="12dp" android:layout_alignParentStart="true"/>
        <TextView android:textSize="@dimen/instabug_normal_text_size" android:textStyle="bold" android:ellipsize="end" android:gravity="start" android:id="@+id/senderNameTextView" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:layout_marginBottom="4dp" android:singleLine="true" android:layout_toLeftOf="@+id/dismissButton" android:layout_toRightOf="@+id/senderAvatarImageView" android:layout_alignTop="@+id/senderAvatarImageView" android:layout_marginEnd="12dp" android:layout_toStartOf="@+id/dismissButton" android:layout_toEndOf="@+id/senderAvatarImageView"/>
        <TextView android:textSize="@dimen/instabug_button_text_size" android:ellipsize="end" android:id="@+id/senderMessageTextView" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:singleLine="true" android:layout_toLeftOf="@+id/dismissButton" android:layout_toRightOf="@+id/senderAvatarImageView" android:layout_below="@+id/senderNameTextView" android:layout_marginEnd="12dp" android:layout_toStartOf="@+id/dismissButton" android:layout_toEndOf="@+id/senderAvatarImageView"/>
        <Button android:ellipsize="middle" android:id="@+id/dismissButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="3dp" android:layout_marginRight="3dp" android:layout_marginBottom="3dp" android:minWidth="112dp" android:text="@string/instabug_str_dismiss" android:lines="1" android:layout_toLeftOf="@+id/replyButton" android:textAllCaps="false" android:layout_toStartOf="@+id/replyButton"/>
        <Button android:ellipsize="middle" android:id="@+id/replyButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="3dp" android:layout_marginRight="3dp" android:layout_marginBottom="3dp" android:minWidth="112dp" android:text="@string/instabug_str_reply" android:lines="1" android:layout_alignParentRight="true" android:textAllCaps="false" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</LinearLayout>
