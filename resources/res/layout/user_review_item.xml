<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/talabat_white" android:paddingTop="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:paddingLeft="@dimen/content_common_margin" android:paddingRight="@dimen/content_common_margin" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp" android:paddingStart="@dimen/content_common_margin" android:paddingEnd="@dimen/content_common_margin">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/rating_star" android:layout_width="18dp" android:layout_height="18dp" android:src="@drawable/ds_star_filled" app:tint="@color/ds_alert_100"/>
            <com.talabat.TalabatTextView android:textSize="@dimen/txt_size_10" android:textColor="@color/dark_blue" android:id="@+id/tv_power_user" android:background="@drawable/blue_bordered_background" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:text="@string/power_user" style="@style/MUXRtextViewMedium"/>
            <ImageView android:gravity="center" android:layout_gravity="center" android:id="@+id/vendor_rate_avatar" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_happy"/>
            <TextView android:textSize="@dimen/_12txtSize" android:textColor="@color/text_black" android:layout_gravity="center_vertical" android:id="@+id/vendor_rate_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/_8margin" android:layout_marginStart="@dimen/_8margin" style="@style/textViewRegular"/>
            <com.talabat.TalabatTextView android:textColor="@color/text_grey" android:layout_gravity="center_vertical" android:id="@+id/tv_comment_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/_8margin" android:text="2012/2/25" android:textAllCaps="false" android:layout_marginStart="@dimen/_8margin" style="@style/Content12Regular"/>
        </LinearLayout>
        <com.talabat.TalabatTextView android:textColor="@color/text_black" android:id="@+id/tv_user_comment" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/_8margin" android:lineSpacingExtra="6dp" style="@style/Content14Regular"/>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/_4margin" android:layout_alignParentLeft="true" android:layout_alignParentStart="true">
                <com.talabat.TalabatTextView android:textColor="@color/text_grey" android:id="@+id/tv_rate_user_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:lineSpacingExtra="4sp" style="@style/Content12Regular"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/view_reply" android:background="@color/muxr_gray_background" android:paddingTop="15dp" android:paddingBottom="15dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="11dp" android:layout_marginRight="5dp" android:layout_marginBottom="15dp" android:layout_marginEnd="5dp">
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/margin_8">
            <ImageView android:layout_width="16dp" android:layout_height="14dp" android:layout_marginLeft="@dimen/MarginLeft" android:src="@drawable/ic_review_reply" android:layout_marginStart="@dimen/MarginLeft"/>
            <com.talabat.TalabatTextView android:textSize="16dp" android:id="@+id/tv_review_restaurant_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/margin_8" android:layout_marginRight="@dimen/MarginRight" android:layout_marginStart="@dimen/margin_8" android:layout_marginEnd="@dimen/MarginRight" style="@style/MUXRtextViewRegular"/>
        </LinearLayout>
        <com.talabat.TalabatTextView android:textColor="@color/muxr_text_color_light" android:id="@+id/tv_restaurant_reply" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="43dp" android:layout_marginRight="@dimen/MarginRight" android:layout_marginStart="43dp" android:layout_marginEnd="@dimen/MarginRight" style="@style/textViewLight"/>
    </LinearLayout>
    <View android:id="@+id/view_separator" android:background="@color/seperator_color" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginLeft="@dimen/content_common_margin" android:layout_marginStart="@dimen/content_common_margin"/>
</LinearLayout>
