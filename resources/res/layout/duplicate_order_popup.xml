<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:background="@drawable/duplicate_popup_background" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ScrollView android:layout_width="wrap_content" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageView android:layout_gravity="end" android:id="@+id/close_popup_button" android:paddingLeft="20dp" android:paddingTop="16dp" android:paddingRight="20dp" android:paddingBottom="10dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/popup_close" android:scaleType="fitCenter" android:paddingStart="20dp" android:paddingEnd="20dp"/>
                <com.talabat.TalabatTextView android:textSize="18dp" android:textColor="@color/talabat_black" android:ellipsize="end" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/duplicate_popup_margin" android:layout_marginRight="@dimen/duplicate_popup_margin" android:text="@string/you_have_an_active_order" android:layout_marginStart="@dimen/duplicate_popup_margin" android:layout_marginEnd="@dimen/duplicate_popup_margin" style="@style/textViewMedium"/>
                <ImageView android:layout_gravity="center_horizontal" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:src="@drawable/icon_duplicate" android:scaleType="fitCenter"/>
                <com.talabat.TalabatTextView android:textSize="13dp" android:textColor="@color/talabat_black" android:gravity="center" android:id="@+id/duplicate_message" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/duplicate_popup_margin" android:layout_marginTop="8dp" android:layout_marginRight="@dimen/duplicate_popup_margin" android:lineSpacingExtra="4dp" android:layout_marginStart="@dimen/duplicate_popup_margin" android:layout_marginEnd="@dimen/duplicate_popup_margin" style="@style/textViewRegular"/>
                <com.talabat.TalabatTextView android:textSize="14dp" android:textColor="@color/edit_text_hint" android:ellipsize="end" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="26dp" android:layout_marginBottom="15dp" android:text="@string/how_may_we_assist_you" android:layout_marginStart="20dp" style="@style/textViewRegular"/>
                <RelativeLayout android:id="@+id/modify_order_option" android:visibility="gone" android:clickable="true" android:layout_width="wrap_content" android:layout_height="48dp">
                    <com.talabat.TalabatRadioButton android:id="@+id/modify_radio" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="20dp" android:button="@null" android:drawableRight="@drawable/ic_m_radio_btn_selector" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:drawableEnd="@drawable/ic_m_radio_btn_selector" android:layout_marginEnd="20dp" android:layout_alignParentEnd="true" style="@style/textViewRegular"/>
                    <com.talabat.TalabatTextView android:textSize="16dp" android:textColor="@color/talabat_black" android:ellipsize="end" android:gravity="left|center_vertical|center_horizontal|center|start" android:layout_gravity="start" android:paddingLeft="20dp" android:paddingRight="20dp" android:drawingCacheQuality="high" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/modify_or_cancel" android:lines="2" android:layout_toLeftOf="@+id/modify_radio" android:layout_centerVertical="true" android:paddingStart="20dp" android:paddingEnd="20dp" android:layout_toStartOf="@+id/modify_radio" style="@style/textViewRegular"/>
                </RelativeLayout>
                <RelativeLayout android:id="@+id/view_order" android:clickable="true" android:layout_width="wrap_content" android:layout_height="48dp">
                    <com.talabat.TalabatRadioButton android:id="@+id/view_order_radio" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="20dp" android:button="@null" android:drawableRight="@drawable/ic_m_radio_btn_selector" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:drawableEnd="@drawable/ic_m_radio_btn_selector" android:layout_marginEnd="20dp" android:layout_alignParentEnd="true" style="@style/textViewRegular"/>
                    <com.talabat.TalabatTextView android:textSize="16dp" android:textColor="@color/talabat_black" android:ellipsize="end" android:gravity="left|center_vertical|center_horizontal|center|start" android:layout_gravity="start" android:paddingLeft="20dp" android:paddingRight="20dp" android:drawingCacheQuality="high" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/view_order_duplicate_popup" android:lines="2" android:layout_toLeftOf="@+id/view_order_radio" android:layout_centerVertical="true" android:paddingStart="20dp" android:paddingEnd="20dp" android:layout_toStartOf="@+id/view_order_radio" style="@style/textViewRegular"/>
                </RelativeLayout>
                <RelativeLayout android:id="@+id/continue_order" android:clickable="true" android:layout_width="wrap_content" android:layout_height="48dp">
                    <com.talabat.TalabatRadioButton android:id="@+id/continue_radio" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="20dp" android:button="@null" android:drawableRight="@drawable/ic_m_radio_btn_selector" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:drawableEnd="@drawable/ic_m_radio_btn_selector" android:layout_marginEnd="20dp" android:layout_alignParentEnd="true" style="@style/textViewRegular"/>
                    <com.talabat.TalabatTextView android:textSize="16dp" android:textColor="@color/talabat_black" android:ellipsize="end" android:gravity="left|center_vertical|center_horizontal|center|start" android:layout_gravity="start" android:paddingLeft="20dp" android:paddingRight="20dp" android:drawingCacheQuality="high" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/continue_ordering" android:lines="2" android:layout_toLeftOf="@+id/continue_radio" android:layout_centerVertical="true" android:paddingStart="20dp" android:paddingEnd="20dp" android:layout_toStartOf="@+id/continue_radio" style="@style/textViewRegular"/>
                </RelativeLayout>
                <com.talabat.talabatcommon.views.TalabatFillButton android:textColor="@color/brand_cta_primary_color" android:layout_gravity="center_horizontal" android:id="@+id/confirm" android:layout_width="match_parent" android:layout_height="@dimen/button_height" android:layout_marginLeft="20dp" android:layout_marginTop="24dp" android:layout_marginRight="20dp" android:text="@string/confirm" android:textAllCaps="false" android:layout_marginStart="20dp" android:layout_marginEnd="20dp" android:stateListAnimator="@null" style="@style/Content16Medium"/>
                <com.talabat.TalabatButton android:textSize="@dimen/txt_size_16" android:textColor="@color/colorSecondary" android:layout_gravity="center_horizontal" android:id="@+id/home_btn" android:background="@null" android:layout_width="wrap_content" android:layout_height="@dimen/button_height" android:layout_marginTop="16dp" android:layout_marginBottom="16dp" android:text="@string/go_to_home" android:textAllCaps="false" android:stateListAnimator="@null" style="@style/buttonMedium"/>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</LinearLayout>
