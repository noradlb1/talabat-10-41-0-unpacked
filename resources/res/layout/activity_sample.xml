    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:text="Restaurants cuisines :"/>
    <com.talabat.cuisines.navigation.CuisineView android:id="@+id/cuisinesView" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginBottom="8dp"/>
    <TextView android:id="@+id/restaurantsSelectionTextView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="20dp" android:text="No Selection"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:text="Collections cuisines :"/>
    <com.talabat.cuisines.navigation.CollectionsCuisineView android:id="@+id/collectionsCuisinesView" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginBottom="8dp"/>
    <TextView android:id="@+id/colectionsSelectionTextView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="20dp" android:text="No Selection"/>
</LinearLayout>
