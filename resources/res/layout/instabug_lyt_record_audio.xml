<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="bottom" android:id="@+id/instabug_recording_audio_dialog_container" style="@style/InstabugDialogContainer">
    <LinearLayout android:gravity="center" android:orientation="vertical" android:background="?attr/instabug_background_color" android:paddingTop="14dp" android:paddingBottom="6dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="@dimen/instabug_normal_text_size" android:gravity="center" android:id="@+id/instabug_txt_recording_title" android:text="@string/instabug_str_hold_to_record" style="@style/InstabugText"/>
        <TextView android:gravity="center" android:id="@+id/instabug_txt_timer" android:paddingTop="5dp" style="@style/InstabugText"/>
        <FrameLayout android:layout_gravity="center" android:id="@+id/instabug_btn_record_audio" android:background="?attr/instabug_background_color" android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:layout_gravity="center" android:id="@+id/instabug_bk_record_audio" android:layout_width="51dp" android:layout_height="51dp" android:src="@drawable/ibg_core_bg_default_record"/>
            <ImageView android:layout_gravity="center" android:id="@+id/instabug_img_record_audio" android:layout_width="26dp" android:layout_height="26dp" android:src="@drawable/ibg_core_ic_mic" android:tint="?attr/instabug_theme_tinting_color"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
