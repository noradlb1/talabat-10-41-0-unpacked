<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/gem_footer_blue" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:id="@+id/main_view" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="2.4" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:layout_alignParentStart="true">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/offer_bg" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_weight="0.1">
            <ImageView android:layout_width="35dp" android:layout_height="@dimen/gem_logo_height" android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:src="@drawable/gem_logo" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
        </LinearLayout>
        <LinearLayout android:gravity="left|center_vertical|center_horizontal|center|start" android:layout_gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_weight="2.2">
            <LinearLayout android:layout_gravity="start" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <com.talabat.TalabatTextView android:textSize="12dp" android:textColor="@color/ds_neutral_white" android:gravity="start" android:id="@+id/old_price_gem" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/subtotal_mony_currency" style="@style/textViewMedium"/>
                <com.talabat.TalabatTextView android:textSize="14dp" android:textColor="@color/gem_text_orange" android:gravity="start" android:id="@+id/new_price_gem" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:layout_marginStart="4dp" style="@style/textViewMedium"/>
            </LinearLayout>
            <com.talabat.TalabatTextView android:textSize="12dp" android:textColor="@color/gem_item_faded_white" android:layout_gravity="start" android:id="@+id/addmore_item_gem" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/add_save_text" style="@style/textViewRegular"/>
        </LinearLayout>
        <LinearLayout android:gravity="end" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="0.1">
            <com.talabat.talabatcommon.views.TalabatStrokeButton android:textSize="@dimen/txt_size_14" android:layout_gravity="center" android:id="@+id/go_to_view_cart" android:padding="3dp" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="100dp" android:layout_height="36dp" android:layout_marginTop="10dp" android:layout_marginRight="10dp" android:layout_marginBottom="10dp" android:text="@string/view_cart" android:singleLine="true" android:paddingStart="10dp" android:paddingEnd="10dp" android:layout_marginEnd="10dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/main_view">
        <ImageView android:layout_gravity="top" android:id="@+id/sand_timer" android:layout_width="@dimen/sand_timer_height_and_width" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:src="@drawable/gem_timer_white"/>
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginTop="3dp" android:layout_marginRight="8dp" android:layout_marginBottom="7dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp">
            <com.talabat.TalabatTextView android:textSize="26dp" android:textColor="@color/ds_neutral_white" android:id="@+id/timer_text_gem" android:layout_width="wrap_content" android:layout_height="wrap_content" android:includeFontPadding="false" style="@style/textViewMedium"/>
            <com.talabat.TalabatTextView android:textSize="8dp" android:textColor="@color/ds_neutral_white" android:gravity="center" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/remaining_time" android:includeFontPadding="false" android:textAllCaps="false" style="@style/textViewMedium"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
