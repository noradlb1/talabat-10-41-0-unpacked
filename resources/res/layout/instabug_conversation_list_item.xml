<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/conversation_list_item_container" android:background="@null" style="@style/InstabugChatsItemContainer">
    <com.instabug.library.ui.custom.CircularImageView android:layout_gravity="center" android:id="@+id/instabug_message_sender_avatar" android:layout_width="@dimen/instabug_chat_item_avatar_size" android:layout_height="@dimen/instabug_chat_item_avatar_size" android:layout_marginRight="16dp" android:src="@drawable/ibg_core_ic_avatar" android:layout_marginEnd="16dp"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/instabug_conversation_item" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.7">
            <TextView android:textSize="@dimen/instabug_normal_text_size" android:textStyle="bold" android:textColor="?attr/instabug_message_sender_text_color" android:ellipsize="end" android:gravity="left|center_vertical|center_horizontal|center|start" android:id="@+id/instabug_txt_message_sender" android:layout_width="match_parent" android:layout_height="wrap_content" android:lines="1" android:singleLine="true"/>
            <TextView android:textSize="@dimen/instabug_button_text_size" android:textColor="?attr/instabug_message_snippet_text_color" android:ellipsize="end" android:gravity="left|center_vertical|center_horizontal|center|start" android:id="@+id/instabug_txt_message_snippet" android:layout_width="match_parent" android:layout_height="wrap_content" android:lines="1" android:singleLine="true"/>
        </LinearLayout>
        <FrameLayout android:orientation="vertical" android:padding="4dp" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.3">
            <TextView android:textSize="@dimen/instabug_date_text_size" android:textColor="?attr/instabug_message_date_text_color" android:ellipsize="end" android:gravity="center_horizontal" android:layout_gravity="top" android:id="@+id/instabug_txt_message_time" android:layout_width="match_parent" android:layout_height="wrap_content" android:lines="1" android:singleLine="true"/>
            <TextView android:textSize="10sp" android:layout_gravity="center" android:id="@+id/instabug_unread_messages_count" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginTop="2dp" style="@style/InstabugUnreadMessagesCountIcon"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
