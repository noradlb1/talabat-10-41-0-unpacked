<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:paddingTop="24dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="16dp" android:layout_marginEnd="16dp">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <FrameLayout android:orientation="vertical" android:id="@+id/vendorLogoContainer" android:background="@drawable/bg_vendor_logo" android:layout_width="44dp" android:layout_height="44dp" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0">
            <ImageView android:layout_gravity="center" android:id="@+id/vendorLogo" android:layout_width="36dp" android:layout_height="34dp"/>
        </FrameLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:id="@+id/vendorName" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginStart="16dp" style="@style/DSTextAppearance.Subheading1"/>
            <TextView android:textColor="@color/ds_neutral_55" android:id="@+id/vendorCuisines" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="4dp" android:layout_marginStart="16dp" style="@style/DSTextAppearance.Caption"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView android:id="@+id/adImage" android:layout_width="match_parent" android:layout_height="131dp" android:layout_marginTop="12dp"/>
    <View android:background="@color/vendor_separator" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/vendorInfoContainer"/>
</LinearLayout>
