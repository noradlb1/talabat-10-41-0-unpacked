<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <FrameLayout android:orientation="vertical" android:id="@+id/vendorLogoContainer" android:background="@drawable/bg_vendor_logo" android:layout_width="56dp" android:layout_height="56dp" android:layout_marginLeft="16dp" android:layout_marginTop="16dp" android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0">
        <ImageView android:layout_gravity="center" android:id="@+id/vendorLogo" android:layout_width="48dp" android:layout_height="48dp"/>
        <ProgressBar android:layout_gravity="center" android:id="@+id/progressBar" android:layout_width="16dp" android:layout_height="16dp"/>
    </FrameLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/vendorInfoContainer" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="16dp" android:layout_marginStart="16dp" android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toEndOf="@+id/vendorLogoContainer" app:layout_constraintTop_toTopOf="0">
        <TextView android:textColor="@color/vendor_normal_title" android:id="@+id/vendorName" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/Titles18Medium"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp">
            <TextView android:textColor="@color/ds_neutral_55" android:id="@+id/vendorCuisines" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/Content12Regular"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp">
            <TextView android:textSize="10sp" android:textColor="@color/vendor_new_tag_text_color" android:layout_gravity="center_vertical" android:id="@+id/vendorNewTag" android:background="@drawable/bg_vendor_new_tag" android:paddingTop="2dp" android:paddingBottom="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="4dp" android:text="@string/vendor_new" android:paddingStart="6dp" android:paddingEnd="6dp" android:layout_marginEnd="4dp" style="@style/Content10Bold"/>
            <com.talabat.talabatcommon.views.TalabatRateView android:id="@+id/vendorRateWidget" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="4dp" android:layout_marginEnd="4dp" app:statusFontSize="12sp"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp">
            <TextView android:textSize="12sp" android:textColor="@color/vendor_delivery_info" android:id="@+id/vendorDeliverTime" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:layout_marginEnd="12dp" style="@style/Content12Regular"/>
            <TextView android:textSize="12sp" android:textColor="@color/vendor_delivery_info" android:id="@+id/vendorDeliverFee" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:layout_marginEnd="12dp" style="@style/Content12Regular"/>
            <TextView android:textSize="12sp" android:textColor="@color/vendor_delivery_info" android:id="@+id/vendorMinimumOrder" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/Content12Regular"/>
        </LinearLayout>
        <com.talabat.sdsquad.ui.customviews.VendorTags android:id="@+id/vendorTags" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" app:tagsFontSize="12sp"/>
    </LinearLayout>
    <View android:background="@color/vendor_separator" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginLeft="16dp" android:layout_marginTop="16dp" android:layout_marginStart="16dp" app:layout_constraintTop_toBottomOf="@+id/vendorInfoContainer"/>
</androidx.constraintlayout.widget.ConstraintLayout>
