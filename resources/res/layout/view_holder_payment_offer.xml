<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/vendorOfferRootLinearLayout" android:background="@drawable/selector_vendor_offers" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/standard_internal_margin">
    <LinearLayout android:orientation="horizontal" android:background="@drawable/selector_vendor_offers" android:padding="@dimen/standard_margin" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/vendorOfferIconImageView" android:padding="2dp" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginRight="@dimen/standard_margin" android:src="@drawable/ic_offer" android:layout_marginEnd="@dimen/standard_margin"/>
        <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerVertical="true">
            <TextView android:ellipsize="end" android:id="@+id/vendorOfferTitleTextView" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginBottom="@dimen/standard_quarter_margin" android:maxLines="2" style="@style/text_black_medium_16sp"/>
            <TextView android:id="@+id/vendorOfferSubTitleTextView" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginBottom="@dimen/standard_quarter_margin" style="@style/text_grey_14sp"/>
        </LinearLayout>
    </LinearLayout>
    <View style="@style/separator"/>
</LinearLayout>
