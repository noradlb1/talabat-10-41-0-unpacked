        </RelativeLayout>
        <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/vendor_content_ll" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="@dimen/ds_xs">
            <LinearLayout android:orientation="horizontal" android:id="@+id/restaurantNameContainer" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingEnd="@dimen/ds_xxl" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0">
