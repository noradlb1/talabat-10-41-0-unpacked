<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/vendor_outer_ll" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:id="@+id/vendor_inner_ll" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="@dimen/ds_s" android:layout_marginEnd="@dimen/ds_s">
        <RelativeLayout android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layoutDirection="ltr">
            <RelativeLayout android:id="@+id/imageContainer" android:background="@drawable/item_image_bg_res_list" android:layout_width="@dimen/vl_logo_image_width" android:layout_height="@dimen/vl_logo_image_height">
                <ImageView android:id="@+id/imageView_restaurantLogo" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="1dp" android:adjustViewBounds="true" android:layout_centerInParent="true"/>
                <ImageView android:id="@+id/imageView_overlay" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="fitCenter" android:adjustViewBounds="true" android:layout_centerInParent="true"/>
                <ProgressBar android:id="@+id/progressBar" android:layout_width="@dimen/cart_item_progress_bar_height_width" android:layout_height="@dimen/cart_item_progress_bar_height_width" android:layout_centerInParent="true" style="?android:attr/progressBarStyleSmall"/>
            </RelativeLayout>
            <FrameLayout android:id="@+id/frameLayout_statusContainer" android:background="@drawable/bg_m_vendor_status" android:layout_width="@dimen/vl_logo_image_width" android:layout_height="@dimen/vl_logo_image_height">
                <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
                    <TextView android:textColor="@color/ds_neutral_white" android:id="@+id/textView_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textAlignment="center" style="@style/DSTextAppearance.Tag"/>
