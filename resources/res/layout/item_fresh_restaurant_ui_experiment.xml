                <ImageView android:id="@+id/vendorRateAvatar" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/ds_xxxs" android:src="@drawable/ic_happy" android:layout_marginEnd="@dimen/ds_xxxs"/>
                <TextView android:gravity="center" android:layout_gravity="center" android:id="@+id/vendorRateStatus" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/DSTextAppearance.Body1"/>
                <com.talabat.talabatcommon.views.ratings.SmallStarRatingView android:id="@+id/starRating" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <com.talabat.collectiondetails.ui.customviews.TStarBadge android:id="@+id/tStarBadge" android:background="@drawable/bg_tsar_badge" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingStart="@dimen/badge_vertical_padding" android:paddingEnd="@dimen/ds_xxxs" android:layout_marginStart="@dimen/ds_xxs"/>
            </LinearLayout>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/pickup_info_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/ds_xxxs" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/rating_container">
                <androidx.constraintlayout.helper.widget.Flow android:id="@+id/flowContainer" android:layout_width="0dp" android:layout_height="wrap_content" app:constraint_referenced_ids="deliveryTimeIcon,textView_averageDeliveryTime,delimeterPoint2,textView_deliveryFee" app:flow_horizontalAlign="0" app:flow_horizontalBias="0" app:flow_horizontalStyle="2" app:flow_wrapMode="1" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/rating_container"/>
                <ImageView android:id="@+id/deliveryTimeIcon" android:layout_width="@dimen/ds_s" android:layout_height="@dimen/ds_s" android:src="@drawable/ds_time" android:layout_marginEnd="@dimen/ds_xxxs"/>
                <TextView android:id="@+id/textView_averageDeliveryTime" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textAlignment="textStart" style="@style/DSTextAppearance.Body1Compact"/>
                <ImageView android:id="@+id/delimeterPoint2" android:layout_width="wrap_content" android:layout_height="20dp" android:src="@drawable/ic_oval" android:paddingStart="@dimen/ds_xxs" android:paddingEnd="@dimen/ds_xxs"/>
                <TextView android:textColor="@color/ds_neutral_100" android:ellipsize="end" android:id="@+id/textView_deliveryFee" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:drawablePadding="@dimen/ds_xxxs" android:drawableStart="@drawable/ic_moto_delivery" android:textAlignment="textStart" app:drawableTint="@color/ds_neutral_100" style="@style/DSTextAppearance.Body1Compact"/>
            </LinearLayout>
            <androidx.constraintlayout.widget.Barrier android:id="@+id/deliveryBarrier" android:layout_width="wrap_content" android:layout_height="wrap_content" app:barrierDirection="3" app:constraint_referenced_ids="deliveryModeLabel,delayBadge"/>
            <TextView android:textColor="@color/ds_neutral_100" android:id="@+id/deliveryModeLabel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/ds_xxxs" android:paddingEnd="@dimen/ds_xxxs" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/pickup_info_container" style="@style/DSTextAppearance.Caption"/>
            <com.talabat.collectiondetails.ui.customviews.DelayBadge android:id="@+id/delayBadge" android:background="@drawable/bg_delay_badge" android:paddingLeft="@dimen/ds_xxxs" android:paddingTop="@dimen/badge_vertical_padding" android:paddingRight="@dimen/ds_xxxs" android:paddingBottom="@dimen/badge_vertical_padding" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/badge_vertical_padding" android:paddingHorizontal="@dimen/ds_xxxs" android:paddingVertical="@dimen/badge_vertical_padding" app:layout_constraintStart_toEndOf="@+id/deliveryModeLabel" app:layout_constraintTop_toBottomOf="@+id/pickup_info_container"/>
            <ImageView android:id="@+id/dashedImage" android:layout_width="match_parent" android:layout_height="2dp" android:layout_marginTop="@dimen/ds_xxxs" android:src="@drawable/bg_line_dashed" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/deliveryBarrier"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/discountContainer" android:layout_width="0dp" android:layout_height="wrap_content" app:layout_constraintEnd_toStartOf="@+id/moreOffers" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/dashedImage">
                <TextView android:textColor="@color/ds_promo_100" android:ellipsize="end" android:id="@+id/textView_pickupDiscountTag" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/ds_xxxs" android:lines="1" android:drawablePadding="@dimen/ds_xxxs" android:drawableStart="@drawable/ic_new_pickup_promo" android:textAlignment="viewStart" android:layout_marginEnd="@dimen/ds_xxxs" android:drawableTint="@color/ds_promo_100" style="@style/DSTextAppearance.Body1"/>
                <TextView android:textColor="@color/ds_promo_100" android:ellipsize="end" android:id="@+id/textView_discountTag" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/ds_xxxs" android:lines="1" android:drawablePadding="@dimen/ds_xxxs" android:drawableStart="@drawable/ic_offer_tag_listpx" android:textAlignment="viewStart" android:layout_marginEnd="@dimen/ds_xxxs" style="@style/DSTextAppearance.Body1"/>
            </LinearLayout>
            <ImageView android:id="@+id/tmp_icon" android:layout_width="14dp" android:layout_height="14dp" android:layout_marginTop="@dimen/ds_xxxs" android:layout_marginEnd="@dimen/ds_xxxs" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/dashedImage" app:srcCompat="@drawable/ds_alert_filled" app:tint="@color/ds_alert_100"/>
            <TextView android:textColor="@color/ds_neutral_100" android:ellipsize="end" android:id="@+id/textView_tmp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/ds_xxxs" android:text="@string/tmp_tag" android:lines="1" android:textAlignment="viewStart" android:layout_marginStart="@dimen/ds_xxxs" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintStart_toEndOf="@+id/tmp_icon" app:layout_constraintTop_toBottomOf="@+id/dashedImage" style="@style/TextAppearance.Body2"/>
            <TextView android:textColor="@color/ds_promo_100" android:gravity="center" android:id="@+id/moreOffers" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/ds_xxxs" android:drawablePadding="@dimen/ds_xxxs" android:layout_marginEnd="@dimen/ds_xxxs" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" style="@style/DSTextAppearance.Tag"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</LinearLayout>
