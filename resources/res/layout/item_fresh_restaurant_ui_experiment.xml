                <TextView android:textSize="10sp" android:textColor="@color/ds_primary_100" android:layout_gravity="center_vertical" android:id="@+id/imageView_newTag" android:background="@drawable/bg_vendor_new_tag_experiment" android:padding="@dimen/ds_xxxs" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/vendor_new" android:layout_weight="0" android:layout_marginStart="@dimen/ds_xxxs" android:layout_marginEnd="@dimen/ds_xxxs" style="@style/DSTextAppearance.Tag"/>
                <ImageView android:layout_gravity="center_vertical" android:id="@+id/imageView_proTag" android:padding="@dimen/ds_xxxs" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/bg_vendor_pro_tag" android:layout_weight="0" android:layout_marginStart="@dimen/ds_xxxs" android:layout_marginEnd="@dimen/ds_xxxs"/>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatImageButton android:id="@+id/favouriteButton" android:background="@color/ds_neutral_white" android:paddingTop="@dimen/ds_xs" android:paddingBottom="@dimen/ds_xs" android:visibility="gone" android:layout_width="@dimen/ds_xxl" android:layout_height="@dimen/ds_xxl" android:src="@drawable/ic_filled_heart" android:paddingStart="@dimen/ds_xs" android:layout_marginStart="@dimen/ds_s" android:paddingVertical="@dimen/ds_xs" app:layout_constraintBottom_toBottomOf="@+id/restaurantNameContainer" app:layout_constraintEnd_toEndOf="0" app:layout_constraintTop_toTopOf="@+id/restaurantNameContainer"/>
            <TextView android:textColor="@color/ds_neutral_55" android:id="@+id/textView_cuisines" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:lines="1" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/restaurantNameContainer" style="@style/TextAppearance.Body2"/>
