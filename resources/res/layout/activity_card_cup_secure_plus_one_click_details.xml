            <com.google.android.material.textfield.TextInputEditText android:id="@+id/editText_phoneNumber" android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="phone"/>
        </com.adyen.checkout.ui.internal.common.view.CustomTextInputLayout>
        <Button android:id="@+id/button_pay" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <TextView android:layout_gravity="center_horizontal" android:id="@+id/textView_surcharge" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textIsSelectable="false" style="@style/Checkout.TextAppearance.Tertiary"/>
    </LinearLayout>
</ScrollView>
