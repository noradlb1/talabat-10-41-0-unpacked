        <com.talabat.helpers.MiniCartLayout android:id="@+id/miniCart" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/_16margin"/>
        <RelativeLayout android:id="@+id/gem_footer_view" android:layout_width="match_parent" android:layout_height="wrap_content"/>
