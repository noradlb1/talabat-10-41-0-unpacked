        <View android:id="@+id/contentUnitDivider" android:background="@color/ds_neutral_10" android:visibility="gone" android:layout_width="@dimen/divider_width" android:layout_height="match_parent"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/llStoredAt" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/ds_xxs" android:layout_marginRight="@dimen/ds_xxs" android:layout_weight="1" android:layout_marginHorizontal="@dimen/ds_xxs">
            <TextView android:gravity="center_horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/product_stored_at" style="@style/DSTextAppearance.Caption"/>
