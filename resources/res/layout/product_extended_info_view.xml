            </LinearLayout>
        </LinearLayout>
        <View android:id="@+id/storedAtDivider" android:background="@color/ds_neutral_10" android:visibility="gone" android:layout_width="@dimen/divider_width" android:layout_height="match_parent"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/llCountry" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/ds_xxs" android:layout_marginRight="@dimen/ds_xxs" android:layout_weight="1" android:layout_marginHorizontal="@dimen/ds_xxs">
            <TextView android:gravity="center_horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/product_country" style="@style/DSTextAppearance.Caption"/>
            <LinearLayout android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/ds_xxxs">
                <ImageView android:id="@+id/imgCountry" android:layout_width="@dimen/ds_s" android:layout_height="@dimen/ds_s"/>
                <TextView android:id="@+id/txtCountry" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="@dimen/ds_xxxs" style="@style/DSTextAppearance.Subheading2"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View android:id="@+id/shelfLifeDivider" android:background="@color/ds_neutral_10" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/divider_height"/>
    <LinearLayout android:id="@+id/llShelfLife" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/ds_xxs" android:layout_marginTop="@dimen/ds_xxs" android:layout_marginRight="@dimen/ds_xxs" android:layout_marginBottom="@dimen/ds_xxs" android:layout_marginHorizontal="@dimen/ds_xxs" android:layout_marginVertical="@dimen/ds_xxs">
        <TextView android:gravity="center_horizontal" android:id="@+id/txtShelfLife" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/DSTextAppearance.Caption"/>
    </LinearLayout>
</merge>
