<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <View android:background="@color/numpad_divider" android:layout_width="match_parent" android:layout_height="2dp"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:id="@+id/button1" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/numpad_one" android:layout_weight="1" style="@style/Checkout.Button.Numpad"/>
        <Button android:id="@+id/button2" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/numpad_two" android:layout_weight="1" style="@style/Checkout.Button.Numpad"/>
        <Button android:id="@+id/button3" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/numpad_three" android:layout_weight="1" style="@style/Checkout.Button.Numpad"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:id="@+id/button4" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/numpad_four" android:layout_weight="1" style="@style/Checkout.Button.Numpad"/>
        <Button android:id="@+id/button5" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/numpad_five" android:layout_weight="1" style="@style/Checkout.Button.Numpad"/>
        <Button android:id="@+id/button6" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/numpad_six" android:layout_weight="1" style="@style/Checkout.Button.Numpad"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:id="@+id/button7" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/numpad_seven" android:layout_weight="1" style="@style/Checkout.Button.Numpad"/>
        <Button android:id="@+id/button8" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/numpad_eight" android:layout_weight="1" style="@style/Checkout.Button.Numpad"/>
        <Button android:id="@+id/button9" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/numpad_nine" android:layout_weight="1" style="@style/Checkout.Button.Numpad"/>
    </LinearLayout>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <Space android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
        <Button android:id="@+id/button0" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/numpad_zero" android:layout_weight="1" style="@style/Checkout.Button.Numpad"/>
        <ImageButton android:id="@+id/button_backspace" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:contentDescription="@string/checkout_backspace" app:srcCompat="@drawable/ic_backspace_black_24dp" style="@style/Checkout.Button.Numpad"/>
    </LinearLayout>
</merge>
