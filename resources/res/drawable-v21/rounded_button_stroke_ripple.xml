<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_pressed="true" android:color="@color/white">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_8sdp"/>
            <stroke android:width="@dimen/_1sdp" android:color="@color/colorSecondary_ripple"/>
            <solid android:color="@color/white"/>
            <gradient android:startColor="@color/colorSecondary_ripple" android:endColor="@color/colorSecondary_ripple" android:angle="-90"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_8sdp"/>
            <stroke android:width="@dimen/_1sdp" android:color="@color/colorSecondary"/>
            <solid android:color="@color/colorSecondary"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_8sdp"/>
            <solid android:color="@color/white"/>
            <stroke android:width="@dimen/_1sdp" android:color="@color/colorSecondary"/>
        </shape>
    </item>
</selector>
