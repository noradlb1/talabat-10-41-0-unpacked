<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/talabat_red"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>
    <item android:bottom="3px">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
            <stroke android:width="0dp" android:color="@color/muxr_separator_line"/>
            <corners android:radius="2dp"/>
            <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp"/>
            <margin android:top="10dp" android:bottom="10dp"/>
        </shape>
    </item>
</layer-list>
