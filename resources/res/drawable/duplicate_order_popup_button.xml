<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="0dp" android:topRightRadius="0dp" android:bottomLeftRadius="3dp" android:bottomRightRadius="3dp"/>
            <stroke android:width="1dp" android:color="@color/talabat_rebrand_green"/>
            <gradient android:startColor="#008b33" android:endColor="#008b33" android:angle="-90"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="0dp" android:topRightRadius="0dp" android:bottomLeftRadius="3dp" android:bottomRightRadius="3dp"/>
            <stroke android:width="1dp" android:color="@color/talabat_rebrand_green"/>
            <solid android:color="@color/talabat_rebrand_green"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="0dp" android:topRightRadius="0dp" android:bottomLeftRadius="3dp" android:bottomRightRadius="3dp"/>
            <stroke android:width="1dp" android:color="@color/talabat_rebrand_green"/>
            <gradient android:startColor="@color/talabat_rebrand_green" android:endColor="@color/talabat_rebrand_green" android:angle="-90"/>
        </shape>
    </item>
</selector>
