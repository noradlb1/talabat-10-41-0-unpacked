<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dp"/>
            <stroke android:width="1dp" android:color="@color/gem_dark_grey_text"/>
            <gradient android:startColor="#b3b2b2" android:endColor="#b3b2b2" android:angle="-90"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dp"/>
            <stroke android:width="1dp" android:color="@color/gem_dark_grey_text"/>
            <solid android:color="@color/talabat_rebrand_light_gray"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dp"/>
            <stroke android:width="1dp" android:color="@color/gem_dark_grey_text"/>
            <gradient android:startColor="@color/gem_dark_grey_text" android:endColor="@color/gem_dark_grey_text" android:angle="-90"/>
        </shape>
    </item>
</selector>
